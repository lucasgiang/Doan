@model Doan.Models.LIENHE

@{
    ViewBag.Title = "Lienhe";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/qc10.gif" class="img-responsive" alt="">
        </div>
        
        <div class="row">
            <div class="col-md-8" style="text-align:center">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Thông tin liên hệ</h4>
                        <p style="float:right; color:red">Thông tin bắt buộc (*)</p>
                        <hr />
                        @Html.ValidationSummary(true)
                        <center>
                            <div class="form-group">

                                <div class="col-md-10">
                                    <table>
                                        <tr style="height:40px">
                                            <td>
                                                <strong>Họ Tên (*):  </strong>
                                            </td>
                                            <td>
                                                @Html.EditorFor(model => model.HOTEN)
                                                @Html.ValidationMessageFor(model => model.HOTEN)

                                            </td>
                                            <td>
                                                @ViewData["Loi1"]
                                            </td>
                                        </tr>
                                        <tr style="height:40px">
                                            <td>
                                                <strong>Công ty:  </strong>
                                            </td>
                                            <td>
                                                @Html.EditorFor(model => model.CONGTY)
                                                @Html.ValidationMessageFor(model => model.CONGTY)
                                            </td>
                                        </tr>
                                        <tr style="height:40px">
                                            <td>
                                                <strong>Điện thoại (*):  </strong>
                                            </td>
                                            <td>
                                                @Html.EditorFor(model => model.DIENTHOAI)
                                                @Html.ValidationMessageFor(model => model.DIENTHOAI)

                                            </td>
                                            <td>
                                                @ViewData["Loi3"]
                                            </td>

                                        </tr>
                                        <tr style="height:40px">
                                            <td>
                                                <strong>Email (*):  </strong>
                                            </td>
                                            <td>
                                                @Html.EditorFor(model => model.EMAIL)
                                                @Html.ValidationMessageFor(model => model.EMAIL)
                                            </td>
                                            <td>
                                                @ViewData["Loi4"]
                                            </td>
                                        </tr>
                                        <tr style="height:40px">
                                            <td>
                                                <strong>Nội dung (*):  </strong>
                                            </td>
                                            <td>
                                                @Html.TextAreaFor(model => model.NOIDUNG)
                                                @Html.ValidationMessageFor(model => model.NOIDUNG)

                                            </td>
                                            <td>
                                                @ViewData["Loi5"]
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </center>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Gửi Thông Tin Liên Hệ" class="btn btn-default" style="background-color:coral" />
                            </div>
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                }


            </div>
            <div class="col-md-4">
                @*<a href="http://www.accuweather.com/en/vn/ho-chi-minh-city/353981/weather-forecast/353981" class="aw-widget-legal">*@
